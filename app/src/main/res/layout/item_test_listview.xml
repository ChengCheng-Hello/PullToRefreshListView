<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clickToClose="true">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_red"
                android:gravity="center"
                android:text="Delete" />

            <TextView
                android:id="@+id/tv_elete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_red"
                android:gravity="center"
                android:text="Add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_test_listview_tv"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_test_listview_btn1"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/selector_white_gray"
                    android:gravity="center"
                    android:text="btn1" />

                <TextView
                    android:id="@+id/item_test_listview_btn2"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/selector_white_gray"
                    android:gravity="center"
                    android:text="btn1" />
            </LinearLayout>
        </LinearLayout>
    </com.swipe.SwipeLayout>
</LinearLayout>