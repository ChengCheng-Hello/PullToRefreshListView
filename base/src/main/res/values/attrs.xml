<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 带更多功能的ListView -->
    <declare-styleable name="TXPTRAndLMBase">
        <!-- 布局页面 -->
        <attr name="mainLayoutId" format="reference" />

        <!-- 数据头部布局 -->
        <attr name="layoutHeader" format="reference" />

        <!-- 无数据时布局 -->
        <attr name="layoutEmpty" format="reference" />

        <!-- 错误时布局 -->
        <attr name="layoutError" format="reference" />

        <!-- 加载更多布局 -->
        <attr name="layoutLoadingMore" format="reference" />

        <!-- 加载更多出错布局 -->
        <attr name="layoutLoadMoreError" format="reference" />

        <!-- 加载更多布局 -->
        <attr name="layoutLoadMoreComplete" format="reference" />

        <!-- 下拉刷新 -->
        <attr name="enablePullToRefresh" format="boolean" />

        <!-- 加载更多 -->
        <attr name="enableLoadMore" format="boolean" />

        <!-- 无数据时文案 -->
        <attr name="emptyMsg" format="reference" />

        <!-- 布局类型 -->
        <attr name="layoutType">
            <flag name="linear" value="0x0" />
            <flag name="grid" value="0x1" />
        </attr>

        <!-- 如果布局类型是grid的话,列数-->
        <attr name="gridSpanCount" format="integer" />
    </declare-styleable>
</resources>