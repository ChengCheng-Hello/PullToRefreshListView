<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 带更多功能的ListView -->
    <declare-styleable name="TXPTRAndLMBase">
        <!-- 布局页面 -->
        <attr name="mainLayoutId" format="reference" />

        <!-- 数据头部布局 -->
        <attr name="layout_header" format="reference" />

        <!-- 无数据时布局 -->
        <attr name="layout_empty" format="reference" />

        <!-- 错误时布局 -->
        <attr name="layout_error" format="reference" />

        <!-- 加载更多布局 -->
        <attr name="layout_loading_more" format="reference" />

        <!-- 加载更多出错布局 -->
        <attr name="layout_load_more_error" format="reference" />

        <!-- 加载更多布局 -->
        <attr name="layout_load_more_complete" format="reference" />

        <!-- 下拉刷新 -->
        <attr name="enablePullToRefresh" format="boolean" />
        <!-- 加载更多 -->
        <attr name="enableLoadMore" format="boolean" />

        <!-- 无数据时文案 -->
        <attr name="emptyMsg" format="reference" />
    </declare-styleable>
</resources>